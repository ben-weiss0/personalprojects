package imageprocessor.model.operations.pixel;

import imageprocessor.model.IPixel;

/**
 * Pixel function object to greyscale by luma.
 */
public class PixelGreyscaleLuma extends PixelTransform {

  @Override
  protected double[][] getTransformationMatrix(IPixel pixel) {
    return new double[][] { {.2126, 0.7152, .0722}, {.2126, 0.7152, .0722}, {.2126, 0.7152, .0722}};
  }
}
